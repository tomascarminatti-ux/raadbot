{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Supervisor General Output",
  "type": "object",
  "required": ["meta", "gates", "decision", "rationale", "required_actions"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["search_id", "candidate_id", "gem", "timestamp", "prompt_version"],
      "properties": {
        "search_id": {"type": "string"},
        "candidate_id": {"type": "string"},
        "gem": {"const": "SUPERVISOR_GENERAL"},
        "timestamp": {"type": "string"},
        "prompt_version": {"type": "string"}
      }
    },
    "gates": {
      "type": "object",
      "required": ["gem1_pass", "gem2_pass", "gem3_pass", "gem4_pass", "qa_attempt_count", "qa_max_retries"],
      "properties": {
        "gem1_pass": {"type": "boolean"},
        "gem2_pass": {"type": "boolean"},
        "gem3_pass": {"type": "boolean"},
        "gem4_pass": {"type": "boolean"},
        "qa_attempt_count": {"type": "integer", "minimum": 0},
        "qa_max_retries": {"type": "integer", "minimum": 0}
      }
    },
    "decision": {
      "type": "string",
      "enum": [
        "APROBADO",
        "DESCARTADO_GEM1",
        "DESCARTADO_GEM2",
        "DESCARTADO_GEM3",
        "BLOQUEADO_QA_REINTENTO",
        "ESCALADO_CONSULTOR_SENIOR"
      ]
    },
    "rationale": {
      "type": "array",
      "items": {"type": "string"}
    },
    "required_actions": {
      "type": "array",
      "items": {"type": "string"}
    }
  }
}
